{
  "name": "betsbot",
  "private": true,
  "workspaces": [
    "bot",
    "web",
    "admin"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:bot dev:web dev:admin",
    "dev:bot": "npm --workspace bot run dev",
    "dev:web": "npm --workspace web run dev",
    "dev:admin": "npm --workspace admin run dev",
    "build": "npm-run-all -s build:web build:admin build:bot",
    "build:web": "npm --workspace web run build",
    "build:admin": "npm --workspace admin run build",
    "build:bot": "npm --workspace bot run build",
    "start": "npm --workspace bot run start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}

